    //Movement
    public void movementKeys()
    {
    	if (event.getKeyCode() == KeyEvent.VK_UP)
    	{
    		jump(); //jump
    	}
    	if (event.getKeyCode() == KeyEvent.VK_LEFT)
    	{
    		x -= speed; //move left
    	}
    	if (event.getKeyCode() == KeyEvent.VK_RIGHT)
    	{
    		x += speed; //move right
    	}
    }
    public void jump()
    {
    	if(touchingPlatformTop)
    	{
    	    yVelocity = 9.9;
            while(!touchingPlatformTop)
            {
            	yVelocity -= 0.5;
            	y += yVelocity;
            }
    	}
    }
    public boolean touchingPlatformTop
    {
    	Rectangle c = [playerobject].getBounds;
    	if(c.intersects([top of platform])
    }
}
